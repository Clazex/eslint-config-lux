{
	"name": "eslint-config-lux",
	"version": "0.0.15",
	"description": "An ESLint Config",
	"author": "Clazex <clazex.y@gmail.com>",
	"license": "AGPL-3.0-or-later",
	"main": "index.js",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"build": "node scripts/build",
		"clear": "node scripts/clear",
		"commit": "cz",
		"lint": "eslint --ext .js --ignore-path .gitignore ./",
		"fix": "npm run lint -- --fix",
		"mdlint": "markdownlint-cli2 -f"
	},
	"dependencies": {
		"eslint-config-standard": "^16.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.12.13",
		"@babel/eslint-parser": "^7.12.13",
		"@babel/eslint-plugin": "^7.12.13",
		"@babel/preset-env": "^7.12.13",
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^12.1.1",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"commitizen": "^4.2.5",
		"conventional-changelog-cli": "^2.1.1",
		"cz-conventional-changelog": "^3.2.0",
		"eslint": "^7.19.0",
		"eslint-plugin-es": "^4.1.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-vue": "^7.5.0",
		"fs-extra": "^9.1.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.3",
		"markdownlint-cli2": "^0.1.3"
	},
	"peerDependencies": {
		"@babel/eslint-plugin": "^7.12.13",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"eslint": "^7.19.0",
		"eslint-plugin-es": "^4.1.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-vue": "^7.5.0"
	},
	"peerDependenciesMeta": {
		"@babel/eslint-plugin": {
			"optional": true
		},
		"@typescript-eslint/eslint-plugin": {
			"optional": true
		},
		"eslint-plugin-eslint-comments": {
			"optional": true
		},
		"eslint-plugin-import": {
			"optional": true
		},
		"eslint-plugin-node": {
			"optional": true
		},
		"eslint-plugin-promise": {
			"optional": true
		},
		"eslint-plugin-vue": {
			"optional": true
		}
	},
	"homepage": "https://github.com/Clazex/eslint-config-lux#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Clazex/eslint-config-lux.git"
	},
	"bugs": {
		"url": "https://github.com/Clazex/eslint-config-lux/issues"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.js": "npm run fix --",
		"*.md": "npm run mdlint --"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=7.1.2"
	},
	"engineStrict": true,
	"keywords": [
		"eslint",
		"eslintconfig"
	]
}
